@model AvatarDinamicoPersonalizado.Models.Login

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Iniciar Sesión</h2>
    
    <form method="post" class="bg-light p-4 rounded shadow-sm">
        <div class="mb-3">
            <label for="Email" class="form-label">Correo Electrónico</label>
            <input type="email" id="Email" name="Email" class="form-control" placeholder="Ingresa tu correo electrónico" required />
        </div>
        <button type="submit" class="btn btn-primary w-100 py-2">Iniciar Sesión</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" style="margin-top: 20px;">@ViewBag.Error</div>
    }
</div>

<style>
    .container {
        max-width: 600px;
    }

    form {
        background-color: #f9f9f9;
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-size: 1.1rem;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(38, 143, 255, 0.25);
    }
</style>