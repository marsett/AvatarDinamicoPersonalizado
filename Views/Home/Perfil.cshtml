@model AvatarDinamicoPersonalizado.Models.Registro

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Perfil de @Model.Nombre</h2>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-lg border-0 p-4">
                <div class="card-body d-flex align-items-center">
                    <div class="avatar-container me-4">
                        <img src="~/avatars/@Model.AvatarUrl" alt="Avatar" class="avatar-img">
                    </div>
                    <ul class="list-group list-group-flush text-start">
                        <li class="list-group-item"><strong>Nombre:</strong> @Model.Nombre</li>
                        <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                        <li class="list-group-item"><strong>Color del Avatar:</strong> <span class="badge" style="background-color: @Model.ColorAvatar;">@Model.ColorAvatar</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background-color: #f9f9f9;
        border-radius: 12px;
    }

    .list-group-item {
        border: none;
        background-color: transparent;
        font-size: 1.1rem;
        padding: 10px 15px;
    }

    .text-primary {
        color: #007bff !important;
    }

    .avatar-container {
        width: 120px;
        height: 120px;
        overflow: hidden;
    }

    .avatar-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .badge {
        font-size: 0.9rem;
        padding: 5px 10px;
        color: #fff;
        border-radius: 5px;
    }
</style>